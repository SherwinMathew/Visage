<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAddDetails">

    <TextView
        android:id="@+id/tv_businessname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/businessimage"
        android:layout_width="226dp"
        android:layout_height="220dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_businessname"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/tv_businessname"
        app:layout_constraintTop_toBottomOf="@+id/tv_businessname"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Address :"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/businessimage"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/businessimage"
        app:layout_constraintTop_toBottomOf="@+id/businessimage" />

    <TextView
        android:id="@+id/tv_working_hours"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Working hours :"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_address" />

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Contact :"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_working_hours"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_working_hours"
        app:layout_constraintTop_toBottomOf="@+id/tv_working_hours" />

    <TextView
        android:id="@+id/service_name_and_price"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Service Name and Price :"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_contact"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_contact"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact" />

    <Button
        android:id="@+id/btn_book"
        android:layout_width="339dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:text="Book Now"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/choosetimeslot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/choosetimeslot"
        app:layout_constraintTop_toBottomOf="@+id/choosetimeslot" />

    <Spinner
        android:id="@+id/choosetimeslot"
        android:layout_width="339dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/service_name_and_price"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/service_name_and_price"
        app:layout_constraintTop_toBottomOf="@+id/service_name_and_price" />

</androidx.constraintlayout.widget.ConstraintLayout>